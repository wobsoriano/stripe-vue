{
  "name": "vue-stripe",
  "type": "module",
  "version": "1.0.1",
  "packageManager": "pnpm@9.11.0",
  "description": "Vue components for Stripe.js and Stripe Elements",
  "author": "Robert Soriano <sorianorobertc@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/wobsoriano/vue-stripe#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wobsoriano/vue-stripe.git"
  },
  "bugs": "https://github.com/wobsoriano/vue-stripe/issues",
  "keywords": [
    "vue",
    "stripe",
    "elements"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsdown --watch --onSuccess \"pnpm build:dts\"",
    "build": "tsdown --env.NODE_ENV production",
    "prepublishOnly": "pnpm build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "update-deps": "taze -w && pnpm i",
    "release": "pnpm build && changeset publish",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@stripe/stripe-js": ">=1.44.1 <8.0.0",
    "vue": "^3.2.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.0",
    "@changesets/cli": "^2.27.8",
    "@stripe/stripe-js": "^7.8.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "^24.2.0",
    "@vitejs/plugin-vue": "^5.1.4",
    "eslint": "^9.32.0",
    "jsdom": "^25.0.1",
    "tsdown": "^0.13.2",
    "typescript": "^5.5.4",
    "vitest": "^2.1.1",
    "vue": "^3.5.8",
    "vue-composable-testing": "^0.2.0"
  }
}
